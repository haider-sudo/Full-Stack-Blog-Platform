{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true
  },
  "types": ["@types/node", "@types/graphql-upload"],
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
